@page "/"

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Discover Books</h2>
    <div>
        <button class="btn btn-outline-secondary me-1" disabled="@IsGridView" @onclick="()=>SetGrid(true)">
            <i class="fa fa-th"></i> Grid
        </button>
        <button class="btn btn-outline-secondary" disabled="@(IsGridView == false)" @onclick="()=>SetGrid(false)">
            <i class="fa fa-list"></i> List
        </button>
    </div>
</div>

@if(BookGenres is not null)
{
    <div class="mb-3">
        <strong>Genres:</strong>
        @foreach(var genre in BookGenres)
        {
            <span class="badge rounded-pill bg-info text-dark me-1">@genre</span>
        }
    </div>
}

@if (IsLoading)
{
    <p>Loading books...</p>
}
else if (BooksForPage is not null)
{
    @if (IsGridView)
    {
        <div class="book-grid">
            @foreach(var book in BooksForPage)
            {
                <div class="book-card">
                    <img src="@book.Thumbnail" alt="@book.Title" />
                    <div class="title">@book.Title</div>
                    <div class="author">@book.Author</div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="book-list">
            @foreach(var book in BooksForPage)
            {
                <div class="book-list-row">
                    <img src="@book.SmallThumbnail" alt="@book.Title" />
                    <span class="title">@book.Title</span>
                    <span class="author ms-2">@book.Author</span>
                </div>
            }
        </div>
    }

    <div class="d-flex justify-content-between mt-3">
        <button class="btn btn-secondary" @onclick="PrevPage" disabled="@(_page == 1)">Previous</button>
        <span>Page @_page</span>
        <button class="btn btn-secondary" @onclick="NextPage">Next</button>
    </div>
}
