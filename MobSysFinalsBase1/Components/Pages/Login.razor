@page "/login"


<div class="login-bg">
    <div class="card login-card p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <i class="fas fa-user-circle fa-3x text-warning mb-2"></i>
            <h3 class="mb-0">Sign In</h3>
            <p class="text-muted small">Welcome back! Please login to your account.</p>
        </div>
        @if (!string.IsNullOrWhiteSpace(StatusMessage))
        {
                <div class="alert alert-@Status d-flex align-items-center" role="alert">
                    <i class="fa fa-info-circle me-2"></i>
                    <span>@StatusMessage</span>
                </div>
        }
        <form @onsubmit="LoginUser" autocomplete="off">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input id="username" class="form-control" type="text" @bind="Model.Username" placeholder="Enter username" title="Username" required autofocus />
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input id="password" class="form-control" type="password" @bind="Model.Password" placeholder="Enter password" title="Password" required />
                </div>
            </div>
            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-warning btn-lg">
                    <i class="fas fa-sign-in-alt"></i> Log In
                </button>
            </div>
        </form>
        
    </div>
</div>
